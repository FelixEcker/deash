#!/usr/bin/deash
# I need this for testing, build.sh is gonna remain the primary
# build script.

if ParamStr(1) = 'docs' then
  cd docs
  mkdir -p html
  rm -f html/*
  for file in Files('*.sad') do
    debug_cbtrace
    sadv %file -x
    mv >Concat(file, '.html') html/>Concat(file, '.html')
  end
  cd ..
elif ParamStr(1) = 'debug' then
  fpc src/deash.pp -FEout/ -Fuinc/ -g -dDEBUG
else
  fpc src/deash.pp -FEout/ -Fuinc/ -O4 -XX -Xs
end
